{
  "name": "@plitzi/plitzi-ui",
  "version": "0.2.0",
  "homepage": "./",
  "license": "MIT",
  "files": [
    "dist",
    "dist/",
    "dist/node_modules",
    "tailwind.config.js"
  ],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/plitzi/plitzi-ui.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/plitzi"
  },
  "main": "dist/src/index.cjs",
  "module": "dist/src/index.es",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.es"
    },
    "./tailwind.config": "./tailwind.config.js",
    "./style.css": "./dist/src/plitzi-ui.css",
    "./tailwind/*": {
      "types": "./dist/src/tailwind/*/index.d.ts",
      "import": "./dist/src/tailwind/*"
    },
    "./icons": {
      "types": "./dist/src/icons/index.d.ts",
      "import": "./dist/src/icons/index.es"
    },
    "./icons/*": {
      "types": "./dist/src/icons/*/index.d.ts",
      "import": "./dist/src/icons/*"
    },
    "./hooks": {
      "types": "./dist/src/hooks/index.d.ts",
      "import": "./dist/src/hooks/index.es"
    },
    "./hooks/*": {
      "types": "./dist/src/hooks/*/index.d.ts",
      "import": "./dist/src/hooks/*"
    },
    "./components": {
      "types": "./dist/src/components/index.d.ts",
      "import": "./dist/src/components"
    },
    "./components/*": {
      "types": "./dist/src/components/*/index.d.ts",
      "import": "./dist/src/components/*"
    },
    "./utils": {
      "types": "./dist/src/utils/index.d.ts",
      "import": "./dist/src/utils/index.es"
    },
    "./utils/*": {
      "types": "./dist/src/utils/*/index.d.ts",
      "import": "./dist/src/utils/*"
    },
    "./*": {
      "types": "./dist/src/components/*/index.d.ts",
      "import": "./dist/src/components/*"
    }
  },
  "sideEffects": [
    "*.scss"
  ],
  "dependencies": {
    "@codemirror/autocomplete": "^6.18.6",
    "@codemirror/commands": "^6.8.1",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.9",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.1",
    "@hookform/resolvers": "^5.2.1",
    "class-variance-authority": "^0.7.1",
    "classnames": "^2.5.1",
    "immer": "^10.1.1",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "react": "^19.1.1",
    "react-color": "^2.19.3",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.6",
    "react-toastify": "^11.0.5",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.1",
    "tinycolor2": "^1.6.0",
    "uuid": "^11.1.0",
    "zod": "^4.1.5"
  },
  "resolutions": {
    "@codemirror/view": "^6.38.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@storybook/addon-actions": "^9.0.8",
    "@storybook/addon-controls": "^9.0.8",
    "@storybook/addon-links": "^9.1.3",
    "@storybook/addon-styling-webpack": "^2.0.0",
    "@storybook/react": "^9.1.3",
    "@storybook/react-vite": "^9.1.3",
    "@storybook/test": "^8.6.14",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/vite": "^4.1.12",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-color": "^3.0.13",
    "@types/react-dom": "^19.1.9",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/tinycolor2": "^1.4.6",
    "@vitejs/plugin-react": "^5.0.2",
    "cssnano": "^7.1.1",
    "eslint": "9.34.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^9.1.3",
    "flow-bin": "^0.280.0",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.6.2",
    "sass": "^1.91.0",
    "storybook": "^9.1.3",
    "stylelint": "^16.23.1",
    "stylelint-order": "^7.0.0",
    "stylelint-scss": "^6.12.1",
    "tailwindcss": "4.1.12",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "vitest-fetch-mock": "^0.4.5"
  },
  "scripts": {
    "start": "storybook dev -p 6006",
    "build:prod": "tsc -p ./tsconfig.app.json && vite build",
    "build:dev": "tsc -p ./tsconfig.app.json && vite build --mode development --watch --minify false",
    "build:analyze": "npx vite-bundle-visualizer",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint-ts": "tsc",
    "lint-style": "stylelint \"**/*.scss\" --custom-syntax postcss-scss",
    "lint-style:fix": "stylelint \"**/*.scss\" --custom-syntax postcss-scss --fix",
    "build-storybook": "build-storybook"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "packageManager": "yarn@4.2.2"
}
