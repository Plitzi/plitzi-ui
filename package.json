{
  "name": "@plitzi/plitzi-ui",
  "version": "0.1.1",
  "homepage": "./",
  "license": "MIT",
  "files": [
    "dist",
    "tailwind.config.js"
  ],
  "type": "module",
  "repository": {
    "type": "https",
    "url": "https://github.com/plitzi/plitzi-ui.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/plitzi"
  },
  "main": "dist/index.mjs",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./tailwind.config": "./tailwind.config.js",
    "./style.css": "./dist/plitzi-ui.css",
    "./hooks": {
      "types": "./dist/src/hooks/*/index.d.ts",
      "import": "./dist/src/hooks/index.mjs"
    },
    "./hooks/*": {
      "types": "./dist/src/hooks/*/index.d.ts",
      "import": "./dist/src/hooks/*",
      "require": "./dist/src/hooks/*"
    },
    "./components": {
      "types": "./dist/src/components/*/index.d.ts",
      "import": "./dist/src/components/index.mjs"
    },
    "./components/*": {
      "types": "./dist/src/components/*/index.d.ts",
      "import": "./dist/src/components/*"
    },
    "./*": {
      "types": "./dist/src/components/*/index.d.ts",
      "import": "./dist/src/components/*",
      "require": "./dist/src/components/*"
    }
  },
  "sideEffects": [
    "**/*.scss"
  ],
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "classnames": "^2.5.1",
    "lodash": "^4.17.21",
    "react": "19.0.0-rc-66855b96-20241106",
    "react-dom": "19.0.0-rc-66855b96-20241106"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@storybook/addon-actions": "^8.4.5",
    "@storybook/addon-controls": "^8.4.5",
    "@storybook/addon-essentials": "^8.4.5",
    "@storybook/addon-interactions": "8.4.5",
    "@storybook/addon-links": "^8.4.5",
    "@storybook/addon-styling-webpack": "^1.0.1",
    "@storybook/node-logger": "^8.4.5",
    "@storybook/react": "^8.4.5",
    "@storybook/react-vite": "^8.4.5",
    "@tailwindcss/forms": "^0.5.9",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/lodash": "^4.17.13",
    "@types/react": "npm:types-react@rc",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "eslint": "9.15.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "eslint-plugin-storybook": "^0.11.1",
    "flow-bin": "^0.254.2",
    "globals": "^15.12.0",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.49",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.3.3",
    "sass": "^1.81.0",
    "storybook": "^8.4.5",
    "stylelint": "^16.10.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.10.0",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.15.0",
    "vite": "^5.4.11",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^2.1.5",
    "vitest-fetch-mock": "^0.4.2"
  },
  "scripts": {
    "start": "storybook dev -p 6006",
    "build:prod": "tsc && vite build",
    "build:dev": "tsc && vite build --watch --minify false",
    "build:analyze": "npx vite-bundle-visualizer",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint-ts": "tsc",
    "lint-style": "stylelint \"**/*.scss\" --custom-syntax postcss-scss",
    "lint-style:fix": "stylelint \"**/*.scss\" --custom-syntax postcss-scss --fix",
    "build-storybook": "build-storybook"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
